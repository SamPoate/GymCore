@model IEnumerable<GymCore.Models.WorkoutsModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/wwwroot/css/workouts.css" rel="stylesheet" />
</head>

<h2>Your Workouts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WorkoutName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkoutSets)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkoutReps1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkoutReps2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkoutReps3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkoutReps4)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight4)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.WorkoutName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkoutSets)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkoutReps1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkoutReps2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkoutReps3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkoutReps4)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight4)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
